<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Elecciones"
             xmlns:ViewModels="clr-namespace:Elecciones.ViewModels"
             x:Class="Elecciones.MainPage">
    <ContentPage.BindingContext>
        <ViewModels:MainViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="ItemCandidato">
                <ViewCell>
                    <StackLayout Orientation="Horizontal" Margin="1">
                        <Image Source="{Binding Foto}" BackgroundColor="Blue" Aspect="AspectFill" 
                               HeightRequest ="150" WidthRequest="150"/>
                        <StackLayout Orientation="Vertical">
                            <Label Text="{Binding Nombre}" FontSize="15" FontAttributes="Bold"/>
                            <Label Text="{Binding Slogan}"/>
                            <Label Text="{Binding Edad}"/>
                            <Label Text="{Binding PartidoPolitico}"/>
                            <Label Text="{Binding Origen}"/>
                        </StackLayout>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ResourceDictionary>
    </ContentPage.Resources>
    <Grid Margin="8,10,5,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>
        <Label Text="Candidatos"  Style="{StaticResource Titulo}" />
        <ListView Grid.Row="1" HasUnevenRows="True" ItemTemplate="{StaticResource ItemCandidato}" SelectedItem="{Binding CandidatoSeleccionado, Mode=TwoWay}" ItemsSource="{Binding Candidatos}"/>       
    </Grid>
</ContentPage>
